{
  "name": "finances",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "npm run check:ssr && npm run smoke:ci",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'husky off in CI'",
    "biome:check": "biome check .",
    "biome:check:write": "biome check --write .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint --write .",
    "fix": "biome check --write .",
    "fix:format": "biome format --write .",
    "fix:lint": "biome lint --write .",
    "type-check": "tsc --noEmit",
    "seed:firestore": "node scripts/seed-firestore.js",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "analyze": "set ANALYZE=true && pnpm build",
    "analyze:server": "set ANALYZE=true && set BUNDLE_ANALYZE=server && pnpm build",
    "analyze:client": "set ANALYZE=true && set BUNDLE_ANALYZE=client && pnpm build",
    "analyze:both": "set ANALYZE=true && set BUNDLE_ANALYZE=both && pnpm build",
    "analyze:report": "node scripts/analyze-bundle.js",
    "check:ssr": "node scripts/check-ssr-safe.js",
    "smoke": "node scripts/smoke-test.js",
    "smoke:ci": "start-server-and-test dev http://localhost:3000/health smoke"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "country-flag-icons": "^1.5.21",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.546.0",
    "next": "15.5.6",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.12",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/bundle-analyzer": "^16.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
